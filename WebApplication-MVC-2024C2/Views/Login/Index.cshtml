@model WebApplication_MVC_2024C2.Models.LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h2>Iniciar Sesión</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label for="Usuario">Usuario</label>
        <input asp-for="Usuario" class="form-control" id="Usuario" required />
        <span asp-validation-for="Usuario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Contraseña">Contraseña</label>
        <input asp-for="Contraseña" type="password" class="form-control" id="Contraseña" required />
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ingresar</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <p style="color:red">Credenciales incorrectas</p>
}